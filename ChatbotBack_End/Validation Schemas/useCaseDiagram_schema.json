{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Use Case Diagram Schema",
  "type": "object",
  "properties": {
    "diagramType": { "const": "useCaseDiagram" },
    "actors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "alias": { "type": "string" },
          "stereotype": { "type": "string" },
          "business": { "type": "boolean" }
        },
        "required": ["name", "alias"]
      }
    },
    "useCases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "alias": { "type": "string" },
          "stereotype": { "type": "string" },
          "business": { "type": "boolean" }
        },
        "required": ["name", "alias"]
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "principal": { "type": "string" },
          "secondary": { "type": "string" },
          "direction": { "type": "string" },
          "label": { "type": "string" }
        },
        "required": ["type", "principal", "secondary"]
      }
    }
  },
  "required": ["diagramType", "actors", "useCases", "relationships"]
}