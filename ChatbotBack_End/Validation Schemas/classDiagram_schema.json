{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Class Diagram Schema",
  "type": "object",
  "properties": {
    "diagramType": { "const": "classDiagram" },
    "declaringElements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "const": "class" },
          "name": { "type": "string" },
          "attributes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "visibility": { "type": "string" },
                "isStatic": { "type": "boolean" },
                "isFinal": { "type": "boolean" }
              },
              "required": ["name", "type", "visibility", "isStatic", "isFinal"]
            }
          },
          "methods": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "returnType": { "type": "string" },
                "visibility": { "type": "string" },
                "isAbstract": { "type": "boolean" },
                "params": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "type": { "type": "string" }
                    },
                    "required": ["name", "type"]
                  }
                }
              },
              "required": ["name", "returnType", "visibility", "isAbstract", "params"]
            }
          }
        },
        "required": ["type", "name"]
      }
    },
    "relationShips": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "source": { "type": "string" },
          "target": { "type": "string" },
          "multiplicity": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["type", "source", "target"]
      }
    }
  },
  "required": ["diagramType", "declaringElements"]
}